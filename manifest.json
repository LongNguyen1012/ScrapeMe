{
    "manifest_version": 2,
    "name": "ntScraper - Telegram edition",
    "version": "6.0",
    "description": "Extract data from websites and web applications without leaving Chrome.",

    "background": {
        "scripts": [
            "/third-party/date.format.js",
            "/tasks/t_defaults.js",
            "/tasks/t_tasks.js",
            "/controller/c_brain.js",
            "/controller/c_brain_utils.js",
            "/controller/c_cache.js",
            "/misc/telegram_notifications.js"
        ],
        "persistent" : false
    },

    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*",
            "file://*/*"
        ],
        "js": [
            "/third-party/date.format.js",
            "/third-party/jquery-3.1.1.min.js",
            "/scripts/utilities/text-utilities.js",
            "/scripts/utilities/time-utilities.js",
            "/scripts/utilities/telegram-utilities.js",
            "/scripts/scrapeGoogleSearchResults.js",
            "/scripts/scrapeTchannels.js",
            "/scripts/scrapeTelegramChannels.js",
            "/scripts/scrapeTsearch.js",
            "/scripts/scrapeTlgrm.js",
            "/selector-tools/st.js",
            "/selector-tools/st_inj.js",
            "/scraper/s_actions.js",
            "/scraper/s_inj.js",
            "/scraper/s_loop_events.js",
            "/scraper/s_main_loop.js",
            "/import/i.js"
        ],
        "css": [
            "/selector-tools/st.css"
        ],
        "all_frames": true,
        "run_at": "document_start"
    }],

    "web_accessible_resources": [
        "/selector-tools/st_inj.js",
        "/scraper/s_inj.js",
        "/third-party/jquery-3.1.1.min.js"
    ],

    "permissions": [
        "management",
        "browsingData",
        "background",
        "tabs",
        "activeTab",
        "tabCapture",
        "webNavigation",
        "storage",
        "unlimitedStorage",
        "alarms",
        "https://api.telegram.org/*"
    ],

    "browser_action": {
        "default_popup": "/control-panel/cp.html",
        "default_icon": "/control-panel/icons/icon.png"
    },

    "icons": {
        "16": "/control-panel/icons/icon16.png",
        "48": "/control-panel/icons/icon48.png",
        "128": "/control-panel/icons/icon128.png"
    }
}
